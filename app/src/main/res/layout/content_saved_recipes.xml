<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:id="@+id/scrllViewRecipes"
        android:layout_width="311dp"
        android:layout_height="466dp"
        android:background="#FAFAFA"
        android:backgroundTint="#FDFCFC"
        android:clipChildren="true"
        android:fillViewport="true"
        android:scrollbarStyle="insideInset"
        app:layoutDescription="idk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.495">

        <LinearLayout
            android:id="@+id/LinLayRecipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtViewRecipeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtViewRecipeCard" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/txtViewRecipeTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtViewRecipe" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/txtViewSavedRecipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@StringSaved Recipes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027" />

</androidx.constraintlayout.widget.ConstraintLayout>